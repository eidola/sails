<div class="container">
  <h3>Users</h3>
  <table class="table table-condensed table-hover">
    <thead>
      <tr>
	<td>ID</td>
	<td>Name</td>
	<td>Email</td>
	<td></td>
      </tr>
    </thead>
    <tbody>
      <% _.each(users, function (user) {  %>
      <tr>
	<td><%= user.id %></td>
	<td><%= user.name %></td>
	<td><%= user.email %></td>
	<td>
	  <a href="/user/<%= user.id %>" class="btn btn-primary">Show</a>
	  <a href="/user/edit/<%= user.id %>" class="btn btn-warning">Edit</a>
	  <a href="/user/destroy/<%= user.id %>" class="btn btn-danger">Delete</a>
      </tr>
      <% }) %>
    </tbody>
  </table>
</div>
