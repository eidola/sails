<div class="container">
  <div class="panel panel-default">
    <div class="panel-heading">
      <h3 class="panel-title">New Release</h3>
    </div>
    <div class="panel-body">
      <form action="create" enctype="multipart/form-data" method="post" role="form">
	<input type="hidden" name="_csrf" value="<%= _csrf %>"/>
	<div class="form-group">
	  <label>Title: </label>
	  <input type="text" name="title" class="form-control"/>
	</div>
	<div class="form-group">
	  <label>Artists: </label><input type="text" name="artists" class="form-control" />
	</div>
	<div class="form-group">
	  <label>Cover: </label><input type="file" name="cover"  class="form-control"/>
	</div>
	<div class="form-group">
	  <label>Formats: </label>
	  <label>CD</label>
	  <div class="input-group">
	    <span class="input-group-addon">
	      <input name="formats[cd][released]" type="checkbox">
	    </span>
	    <span class="input-group-addon">£</span>
	    <input type="text" name="formats[cd][price]" class="form-control"/>
	  </div>
	  <label>Digital Download</label>
	  <div class="input-group">
	    <span class="input-group-addon">
	      <input name="formats[digital][released]" type="checkbox">
	    </span>
	    <span class="input-group-addon">£</span>
	    <input type="text" name="formats[digital][price]"  class="form-control"/>
	  </div>
	  <label>Vinyl</label>
	  <div class="input-group">
	    <span class="input-group-addon">
	      <input name="formats[vinyl][released]" type="checkbox">
	    </span>
	    <span class="input-group-addon">£</span>
	    <input type="text" name="formats[vinyl][price]" class="form-control"/>
	  </div>
	</div>
	<button type="submit" class="btn btn-default">Submit</button>
      </form>
    </div>
  </div>
</div>
